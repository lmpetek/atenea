<% form_for 'event', :url => {:action => :save} do |e| %>
<% if not @event.id; @account.check_public = false %>
<p>Calendario: <%= select_tag 'calendar_id', options_for_select(@account.calendars.collect{|c| [c.title, c.id]}) %></p>
<% end; @account.check_public = true %>
<%= hidden_field_tag 'event_id', @event.id %>
<p><%=t :title %> <%= e.text_field :title %></p>
<p>Donde: <%= e.text_field :where %></p>
<p>Notas: <%= e.text_area :content %></p>
<p>Evento de todo el d√≠a: <%= e.select :all_day, [['Yes', 'true'], ['No', 'false']] %></p>
<p>Evento repetitivo: <%= select_tag :recurrence, options_for_select([['No', 0], ['Yes', 1]]) %></p>
<p>Fecha/Hora inicio: <%= e.text_field :start_time %></p>
<p>Fecha/Hora fin: <%= e.text_field :end_time %></p>
<p>Fecha/hora inicio repeticion: <%= text_field_tag :recurrence_start %></p>
<p>Fecha/hora fin repeticion: <%= text_field_tag :recurrence_end %></p>
<p>Frequencia de la repeticion: <%= select_tag :recurrence_freq, options_for_select(['Weekly', 'Daily']) %> on <%= select_tag :recurrence_on, options_for_select(['MO', 'TU', 'WE', 'TH', 'FR', 'SA', "SU"])%> 
</p>
<p>Repetir hasta: <%= text_field_tag :recurrence_until %></p>
<%= submit_tag 'Save' %>
<% end %>